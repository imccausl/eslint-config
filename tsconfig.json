{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "declaration": false,
  },
  "include": [
    "src",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
