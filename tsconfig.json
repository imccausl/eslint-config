{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "declaration": false,
    "lib": [
      "ESNext",
    ]
  },
  "include": [
    "src",
    "eslint.config.js",
    "commitlint.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}