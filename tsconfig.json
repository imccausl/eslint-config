{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "emitDeclarationOnly": false,
        "declaration": false,
        "lib": ["ESNext"],
        "rootDir": "."
    },
    "include": [
        "src",
        "eslint.config.js",
        "commitlint.config.cjs",
        ".prettierrc.js"
    ],
    "exclude": ["node_modules", "lib"]
}
