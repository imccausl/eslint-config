{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "declaration": false,
    "lib": ["ESNext"]
  },
  "exclude": ["node_modules"],
  "include": ["../../src/**/*", "../../eslint.config.*"]
}
