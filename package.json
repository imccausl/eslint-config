{
  "name": "@imccausl/eslint-config",
  "version": "2.0.0",
  "packageManager": "yarn@4.4.0",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/imccausl/eslint-config.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "main": "./lib/index.js",
    "exports": {
      ".": {
        "default": "./lib/index.js"
      },
      "./base": {
        "default": "./lib/base/index.js"
      },
      "./react": {
        "default": "./lib/react/index.js"
      },
      "./test": {
        "default": "./lib/test/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf lib",
    "compile": "tsc -b ./tsconfig.build.json",
    "build": "yarn clean && yarn compile",
    "prepare": "husky",
    "publish": "semantic-release",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit"
  },
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./base": {
      "default": "./src/base/index.ts"
    },
    "./react": {
      "default": "./src/react/index.ts"
    },
    "./test": {
      "default": "./src/test/index.ts"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@imccausl/eslint-config": "^2.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.14.14",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@yarnpkg/sdks": "^3.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-testing-library": "^7.0.0",
    "eslint-plugin-vitest": "~0.4.1",
    "husky": "^9.1.4",
    "prettier": "^3.3.3",
    "semantic-release": "^23.0.2",
    "semantic-release-yarn": "^3.0.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@tanstack/eslint-plugin-query": ">=5.20.1",
    "@typescript-eslint/eslint-plugin": ">=8.0.0",
    "@typescript-eslint/parser": ">=8.0.0",
    "@yarnpkg/sdks": ">=3.1.0",
    "eslint": "^8 || ^9",
    "eslint-config-prettier": ">=9.1.0",
    "eslint-import-resolver-node": ">=0.3.9",
    "eslint-import-resolver-typescript": ">=3.6.1",
    "eslint-plugin-import": ">=2.29.1",
    "eslint-plugin-jsx-a11y": ">=6.8.0",
    "eslint-plugin-prettier": ">=5.1.3",
    "eslint-plugin-react": ">=7.33.2",
    "eslint-plugin-react-hooks": ">=4.6.0",
    "eslint-plugin-testing-library": ">=6.2.0",
    "eslint-plugin-vitest": "<=0.4.1",
    "prettier": ">=3.2.5",
    "typescript": ">=5.3"
  },
  "peerDependenciesMeta": {
    "@tanstack/eslint-plugin-query": {
      "optional": true
    },
    "eslint-plugin-jest": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-testing-library": {
      "optional": true
    },
    "eslint-plugin-vitest": {
      "optional": true
    }
  }
}
